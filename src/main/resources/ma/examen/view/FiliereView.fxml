<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      fx:controller="ma.examen.controller.FiliereController" spacing="20" style="-fx-padding: 30;">

    <Label text="Gestion des Filières" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>

    <HBox spacing="15" alignment="CENTER_LEFT">
        <TextField fx:id="txtCode" promptText="Code (ex: INFO)" prefWidth="120"/>
        <TextField fx:id="txtNom" promptText="Intitulé (ex: Génie Info)" prefWidth="200"/>
        <TextField fx:id="txtDesc" promptText="Description complète..." HBox.hgrow="ALWAYS"/>
    </HBox>

    <HBox spacing="10">
        <Button text="Ajouter" onAction="#handleAjouter" style="-fx-background-color: #27ae60; -fx-text-fill: white;"/>
        <Button text="Modifier" onAction="#handleModifier" style="-fx-background-color: #f39c12; -fx-text-fill: white;"/>
        <Button text="Supprimer" onAction="#handleSupprimer" style="-fx-background-color: #e74c3c; -fx-text-fill: white;"/>
    </HBox>

    <TableView fx:id="table" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="colCode" text="Code" prefWidth="80"/>
            <TableColumn fx:id="colNom" text="Nom" prefWidth="200"/>
            <TableColumn fx:id="colNb" text="Effectif" prefWidth="100"/>
            <TableColumn fx:id="colDesc" text="Description"/>
        </columns>
        <columnResizePolicy><TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/></columnResizePolicy>
    </TableView>
</VBox>