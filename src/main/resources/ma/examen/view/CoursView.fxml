<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      fx:controller="ma.examen.controller.CoursController" spacing="20" style="-fx-padding: 20;">
    <Label text="Gestion des Cours" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

    <HBox spacing="15">
        <VBox spacing="10" HBox.hgrow="ALWAYS">
            <HBox spacing="10">
                <TextField fx:id="txtCode" promptText="Code (ex: JAVA)" prefWidth="120"/>
                <TextField fx:id="txtIntitule" promptText="Titre du cours (ex: Programmation OO)" HBox.hgrow="ALWAYS"/>
            </HBox>
            <HBox spacing="10">
                <Button text="Ajouter" onAction="#handleAjouter" style="-fx-background-color: #27ae60; -fx-text-fill: white;"/>
                <Button text="Modifier" onAction="#handleModifier" style="-fx-background-color: #f39c12; -fx-text-fill: white;"/>
                <Button text="Supprimer" onAction="#handleSupprimer" style="-fx-background-color: #e74c3c; -fx-text-fill: white;"/>
            </HBox>

            <TableView fx:id="table" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="colCode" text="Code" prefWidth="100"/>
                    <TableColumn fx:id="colIntitule" text="Intitulé" prefWidth="300"/>
                </columns>
                <columnResizePolicy><TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/></columnResizePolicy>
            </TableView>
        </VBox>

        <VBox spacing="10" minWidth="250" style="-fx-border-color: #ccc; -fx-padding: 10;">
            <Label text="Affectation aux Filières" style="-fx-font-weight: bold;"/>

            <Label text="Filières déjà affectées :" style="-fx-font-size: 10px;"/>
            <ListView fx:id="listFiliereAffectees" prefHeight="150"/>

            <Separator/>

            <Label text="Ajouter une nouvelle affectation :" style="-fx-font-size: 10px;"/>
            <ComboBox fx:id="cmbFiliereAssign" promptText="Choisir une filière..." maxWidth="Infinity"/>
            <Button text="Lier à la filière" onAction="#handleAffecterFiliere" maxWidth="Infinity"/>
        </VBox>
    </HBox>
</VBox>